  <span class="hamburger-box">
    <span class="hamburger-inner"></span>
  </span>
  </button>
  <div class="menu-content">
    {{ menuContent }}
  </div>
</div>
<aside class="menu hide-on-small">
  {{ menuLogo }}
  {{ menuContent }}
</aside>